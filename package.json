{
  "name": "modern-admin-dashboard",
  "private": true,
  "workspaces": {
    "packages": [
      "admin",
      "apps/api",
      "shop"
    ],
    "nohoist": [
      "admin/@tanstack/**",
      "admin/react",
      "admin/react-dom",
      "admin/react/jsx-runtime"
    ]
  },
  "scripts": {
    "dev:client": "npm --prefix admin run dev",
    "dev:shop": "npm --prefix shop run dev",
    "dev:server": "cd apps/api && node simple-server.js",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:shop-all": "concurrently \"npm run dev:server\" \"npm run dev:shop\"",
    "build:client": "npm --prefix admin run build",
    "build:shop": "npm --prefix shop run build",
    "build:server": "npm --prefix apps/api run build",
    "preview": "npm --prefix admin run preview",
    "server": "cd apps/api && node simple-server.js",
    "install:all": "npm --prefix admin install && npm --prefix apps/api install && npm --prefix shop install",
    "start": "npm run dev:all",
    "start:simple": "npm run start:backend & npm run start:frontend",
    "start:backend": "npm run dev:server",
    "start:frontend": "npm run dev:client",
    "stop-all": "bash ./scripts/devops/stop-all.sh",
    "stop:backend": "pkill -f 'simple-server.js' && pkill -f 'node.*api'",
    "stop:frontend": "pkill -f 'vite' && pkill -f 'node.*admin'",
    "restart": "npm run stop-all && sleep 2 && npm run start",
    "dev:restart": "npm run stop-all && sleep 2 && npm run dev:all",
    "restart:backend": "npm run stop:backend && sleep 2 && npm run start:backend",
    "restart:frontend": "npm run stop:frontend && sleep 2 && npm run start:frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
